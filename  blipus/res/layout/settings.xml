<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Login"></TextView>
<EditText android:id="@+id/loginTextField" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Password"></TextView>
<EditText android:id="@+id/passwordTextField" android:layout_height="wrap_content" android:layout_width="fill_parent" android:password="true"></EditText>
<Button android:id="@+id/storeButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Store"></Button>
</LinearLayout>
