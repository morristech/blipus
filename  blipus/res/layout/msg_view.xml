<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:paddingBottom="1px" android:paddingTop="1px" android:paddingLeft="2px" android:paddingRight="2px" android:gravity="fill_horizontal" android:layout_gravity="fill_horizontal" android:fitsSystemWindows="true">
<LinearLayout
	android:background="@color/blue"
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:paddingBottom="1px" 
    android:paddingTop="1px" 
    android:paddingLeft="2px" 
    android:paddingRight="2px"    
    android:gravity="right" 
    android:layout_gravity="fill_horizontal" 
    android:fitsSystemWindows="true">
<TextView android:id="@+id/msgUser" 
	android:layout_height="wrap_content" 
	android:text="user"
	android:textColor="@android:color/black"
	android:background="@color/blue"
	android:layout_width="wrap_content" />
<LinearLayout
	android:background="@color/blue"
	android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:paddingBottom="1px" 
    android:paddingTop="1px" 
    android:paddingLeft="2px" 
    android:paddingRight="2px"    
    android:gravity="right" 
    android:layout_gravity="fill_horizontal" 
    android:fitsSystemWindows="true">	
<ImageView android:id="@+id/image"
	android:visibility="invisible"
	android:background="@drawable/image"
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"/>
<ImageView android:id="@+id/movie"
	android:visibility="invisible"
	android:background="@drawable/movie" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"/>
<ImageView android:id="@+id/recording"
	android:visibility="invisible"
	android:background="@drawable/recording" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"/>
</LinearLayout>	
</LinearLayout>
<TextView android:id="@+id/msgBody" 
	android:text="blipView" 
	android:textColor="@android:color/black"
	android:background="@android:color/white"
	android:textColorHighlight="@color/blue2"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"/>
</LinearLayout>
